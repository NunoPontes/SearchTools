<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<Button
		android:id="@+id/btnSearchView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="SearchView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/btnEditText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="EditText"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btnSearchView" />

	<Button
		android:id="@+id/btnSearchViewList"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="SearchViewList"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btnEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>